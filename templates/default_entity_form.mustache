{{!
    @template local_mentor_core/default_entity_form

    This template renders a default entity form.

    Example context (json):
    {
        "extrahtml" : "<div>extra HTML to display</div>"
    }
}}

<div id="default-entity-form-template">
    <form id="default-entity-form">
        <div>
            <label for="entities">{{# str }} space, local_mentor_core {{/ str }} *</label>
            <select id="entities" name="entityid" class="custom-select"></select> <!-- Ajout de la classe custom-select -->
        </div>
        {{{ extrahtml }}}
    </form>
</div>

