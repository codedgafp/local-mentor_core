{{!
    @template local_mentor_core/moremenu/navbar

    The navbar more menu custom.

    Example context (json):
    {
        "navbar": {
            "items": [
                {
                    "key": "data1",
                    "id": "id1",
                    "label": "label1",
                    "active": "true"
                    "content": "<p>content text<p>
                },
                {
                    "key": "data2",
                    "id": "id2",
                    "label": "label2",
                    "content": "<p>content text<p>
                },
            ]
        },
        "uniqid": "614c104dbacfa"
    }
}}

<div class="secondary-navigation-navbar secondary-navigation d-print-none">
    <nav class="moremenu navigation observed" role="navigation" aria-label="Informations complÃ©mentaires">
        <ul class="nav more-nav nav-tabs" id="moremenu-{{ uniqid }}-nav-tabs" role="tablist">
            {{# items }}
                <li data-key="{{ key }}" class="nav-item" role="none" data-forceintomoremenu="false">
                    <a role="tab" class="nav-link {{# active }}active_tree_node active{{/active}}" href="#{{ id }}" data-toggle="tab" data-text="{{ label }}"
                       aria-selected="true" tabindex="0">
                        {{ label }}
                    </a>
                </li>
            {{/ items }}
            <li role="none" class="nav-item dropdown dropdownmoremenu d-none" data-region="morebutton">
                <a class="dropdown-toggle nav-link " href="#" id="moremenu-dropdown-{{ uniqid }}" role="tab" data-toggle="dropdown" aria-haspopup="true"
                   aria-expanded="false" tabindex="-1">
                    {{# str }} more, local_mentor_core {{/str}}
                </a>
                <ul class="dropdown-menu dropdown-menu-left" data-region="moredropdown" role="menu" aria-labelledby="moremenu-dropdown-{{ uniqid }}" role="menu"
                    style="will-change: transform;">
                </ul>
            </li>
        </ul>
    </nav>
    <div class="tab-content">
        {{# items }}
            <div class="tab-pane fade {{# active }}active show{{/active}}" id="{{ id }}" role="tabpanel" aria-labelledby="nav-content-tab">{{{ content }}}</div>
        {{/ items }}
    </div>
</div>

{{#js}}
    require(['core/moremenu'], function(moremenu) {
    moremenu(document.querySelector('#moremenu-{{ uniqid }}-nav-tabs'));
    });
{{/js}}
